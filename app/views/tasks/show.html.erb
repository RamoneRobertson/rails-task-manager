<div class="container">
  <h1>Task Details</h1>
  <div class="row">
    <p><%= @task.details %></p>
  </div>
  <div class="row">
    <%= link_to 'Delete Task',
      task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"}
    %>
  </div>
  <div class="row">
    <%= link_to 'Back to Tasks',  tasks_path %>
  </div>


</div>
